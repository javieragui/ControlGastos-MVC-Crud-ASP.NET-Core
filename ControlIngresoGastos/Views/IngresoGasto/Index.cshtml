@model IEnumerable<ControlIngresoGastos.Models.IngresoGasto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Ingresos y Gastos</h1>
<form asp-action="index">
    <div class="form-row">
        <div class="form-group col-md-1">
            <lable class="control-label">Mes/Año</lable>
        </div>
        <div class="form-group col-md-2">
            <input type="number" class="form-control text-right" name="mes" min="1" max="12" value="@ViewBag.mes" />
        </div>
        <div class="form-group col-md-2">
            <input type="number" class="form-control text-right" name="anyo" value="@ViewBag.anyo" autocomplete="off" />
        </div>
        <div class="form-group col-md-2">
            <input type="submit" class="btn btn-primary" value="Consultar" />
        </div>
    </div>
</form>
<p>
    <a class="btn btn-success" asp-action="Create">Crear Nuevo</a>
</p>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Categoria.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                @if (item.Categoria.Tipo == "IN")
                {
                   <p class="text-success text-right">@Html.DisplayFor(modelItem => item.Valor)</p>
                }
                else
                {
                    <p class="text-danger text-right">@Html.DisplayFor(modelItem => item.Valor)</p>  
                }
            </td>
            <td>
                <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
